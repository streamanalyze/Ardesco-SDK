# Enable MPU
CONFIG_ARM_MPU=y

# Enable TrustZone-M
CONFIG_ARM_TRUSTZONE_M=y

# This Board implies building Non-Secure firmware
CONFIG_TRUSTED_EXECUTION_NONSECURE=y

# Enable GPIO
CONFIG_GPIO=y

# Enable UARTE
CONFIG_SERIAL=y

# Enable console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Enable I2C
CONFIG_I2C=y
CONFIG_I2C_2=y

# Enable SPI
CONFIG_SPI=y
CONFIG_SPI_3=y

# Enable power management IC ADP536x
CONFIG_ADP536X=n

# Disable entropy driver, as it's not yet implemented for nRF9160
CONFIG_ENTROPY_NRF5_RNG=n

# Select default sensors here. These can be
# overridden in the prj file for an individual application.
CONFIG_SENSOR=y
CONFIG_BME680=y

